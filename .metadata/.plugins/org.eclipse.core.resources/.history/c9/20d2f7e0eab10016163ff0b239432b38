#include <iostream>
#include <stdio.h>
using namespace std;



void exception_throw(int a,int b)
{
	if(a==0)
		throw("a is 0\n");
	else
		printf("b/a = %d\n",b/a);
}

int main()
{
	cout << "!!!Hello World!!!" << endl; // prints !!!Hello World!!!

	try
	{
		exception_throw(3,6);
	}
	catch(char *ex)
	{
		printf(ex);
	}
	try
	{
		exception_throw(0,6);
	}
	catch(char *ex)
	{
		printf(ex);
	}


	return 0;
}
