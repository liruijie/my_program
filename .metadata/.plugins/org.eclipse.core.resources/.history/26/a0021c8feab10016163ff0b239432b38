#include <iostream>
#include <stdio.h>
#include <stdlib.h>
using namespace std;

int main() {
	cout << "!!!Hello World!!!" << endl; // prints !!!Hello World!!!
	return 0;
}

void exception_throw(int a,int b)
{
	if(a==0)
		throw("a is 0\n");
	else
		printf("b/a = %d\n",b/a);
}
